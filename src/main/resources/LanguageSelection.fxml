<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LanguageSelectionController">
    <ComboBox fx:id="languageComboBox" onAction="#onLanguageChange" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="English"/>
                <String fx:value="Farsi"/>
                <String fx:value="Japanese"/>
            </FXCollections>
        </items>
    </ComboBox>
    <TextField fx:id="nameTextField" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0"/>
    <TextField fx:id="lastNameTextField" AnchorPane.topAnchor="90.0" AnchorPane.leftAnchor="10.0"/>
    <TextField fx:id="emailTextField" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="10.0"/>
    <Button fx:id="saveButton" text="Save" onAction="#onSaveButtonClick" AnchorPane.topAnchor="170.0" AnchorPane.leftAnchor="10.0"/>
</AnchorPane>